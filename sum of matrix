#include<stdio.h>
main(){
	int m,n,first[n][m],second[n][m],sum[n][m];
	int c,d;
	printf("enter the row and column\n");
	scanf("%d%d",&m,&n);
	printf("enter the first array element\n");
	for(c=0;c<m;c++){
		for(d=0;d<n;d++){
			scanf("%d",&first[c][d]);
   }    }
	
	printf("enter the second array element\n");
	for(c=0;c<m;c++){
		for(d=0;d<n;d++){
			scanf("%d",&second[c][d]);
   }    }
	for(c=0;c<m;c++){
		for(d=0;d<n;d++){
			sum[c][d]=first[c][d]+second[c][d];
	   }
	}
	printf("sum of two matrix\n");
	for(c=0;c<m;c++){
		for(d=0;d<n;d++){
			printf("%d\t",sum[c][d]);
		}
		printf("\n");
	}
}
