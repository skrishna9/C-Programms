#include<stdio.h>
main(){
	int n,i,j,k,l,s=1,a=0;
	printf("enetr the value of n:");
	scanf("%d",&n);
	for(l=2;l<n;l++){
		if(l%2==0){
			a++;
		}
	}

	for(i=1;i<=n-a;i++){
		for(j=n-i;j>0;j--){
			printf(" ");
		}	
		for(k=1;k<=2*i-1;k++){
			printf("*");
		}
		printf("\n");
    }
    for(i=n-(a+1);i>0;i--){
		for(j=n-i;j>0;j--){
			printf(" ");
		}	
		for(k=1;k<=2*i-1;k++){
			printf("*");
		}printf("\n");
    }
}
